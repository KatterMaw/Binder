<Window x:Class="Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="444" Width="349" WindowStyle="None" ResizeMode="NoResize" Background="Transparent" AllowsTransparency="True" WindowStartupLocation="CenterScreen">
    <Border Margin="10" Background="#1e2124" Width="Auto" Height="Auto" BorderThickness="1" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Opacity="0.5" ShadowDepth="0"/>
        </Border.Effect>
        <Grid>
            <ProgressBar x:Name="progressbar" Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" Width="130" Height="130" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#00b8d4">
                <ProgressBar.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.5"/>
                </ProgressBar.Effect>
            </ProgressBar>
            <Label x:Name="percent_text" Content="0%" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" Foreground="#00b8d4" FontWeight="Bold">
                <Label.Effect
            </Label>
        </Grid>
    </Border>
</Window>